var prev = $('#contents').html();

$('#contents').html(prev + '<%= escape_javascript render(@posts) %>');

$('#next').html(
  '<%= escape_javascript(link_to_next_page(@posts, "More Read", :remote => true, :id => "next_link", class: "btn-outline-primary btn").to_s) %>'
);

// ツールチップ
$(function () {
  $('[data-toggle="tooltip"]').tooltip()
});

// inview
$(function() {
  $('.fadein').css('opacity', 0.1);
  $('.fadein').on('inview', function(event, isInView, visiblePartX, visiblePartY) {
    if (isInView) {
      $(this).stop().animate({opacity: 1}, 300);
    } else {
      $(this).stop().animate({opacity: 0.1}, 300);
    }
  });
});
