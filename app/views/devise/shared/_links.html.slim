- if controller_name != 'sessions'
  = link_to "ログインはこちら", new_session_path(resource_name), class: 'btn btn-outline-secondary w-100 mb-2'
  br
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "アカウントを作成する", new_registration_path(resource_name), class: 'btn btn-success signup mt-2 w-100'
  br
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to "パスワードをお忘れですか?", new_password_path(resource_name), class: 'btn btn-link'
  br
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'btn btn-link'
  br
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'btn btn-link'
  br
- if devise_mapping.omniauthable? && controller_name != 'passwords'
  - resource_class.omniauth_providers.each do |provider|
    = link_to omniauth_authorize_path(resource_name, provider),class: 'btn btn-outline-light btn-social text-center rounded-circle twitter', method: :get do
      i.fa.fa-twitter
    | Twitterでログインする
    br
